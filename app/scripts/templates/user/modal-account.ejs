<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span></button>
            <h4 class="modal-title">User Account Settings</h4>
        </div>
        <div class="alert alert-danger main hidden" role="alert">
            <i class="fa fa-exclamation-circle"></i> Please correct the highlighted fields below!
        </div>
        <div class="alert alert-danger not-match hidden" role="alert">
            <i class="fa fa-exclamation-circle"></i> Password doesn't match or too short (minimum is 6 characters).
        </div>
        <div class="alert alert-danger server hidden" role="alert">
            <i class="fa fa-exclamation-circle"></i> <span></span>
        </div>
        <div class="modal-body">
            <form role="form" id="registerForm">
                <div class="form-group">
                    <label for="accountEmail">Email</label>
                    <input name="email" type="email" class="form-control" id="accountEmail" readonly/>
                </div>
                <div class="form-group">
                    <label for="accountFirstname">First name</label>
                    <input name="first_name" type="text" class="form-control" id="accountFirstname" autofocus required/>
                </div>
                <div class="form-group">
                    <label for="accountLastname">Last name</label>
                    <input name="last_name" type="text" class="form-control" id="accountLastname" required/>
                </div>
                <div class="form-group">
                    <label for="accountAddress">Address</label>
                    <input name="address" type="text" class="form-control" id="accountAddress"/>
                </div>
                <div class="form-group">
                    <label for="accountOrganization">Organization/Affiliation</label>
                    <input name="organization" type="text" class="form-control" id="accountOrganization"/>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="submit" id="submit_settings" class="btn btn-grey">Update</button>
        </div>
    </div>
</div>
