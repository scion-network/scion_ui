  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span></button>
        <h4 class="modal-title" id="myModalLabel">Log In to SciON</h4>
      </div>
      <div class="modal-body">
          <div class="alert alert-danger" role="alert" style="display:none">
              <i class="fa fa-exclamation-circle"></i> Please check your Username and Password
          </div>
          <form id="loginForm">
              <div class="form-group">
                  <label for="loginUsername">Username</label>
                  <input name="username" type="text" class="form-control" id="loginUsername" autofocus required/>
              </div>
              <div class="form-group">
                  <label for="loginPassword">Password</label>
                  <input name="password" type="password" class="form-control password" id="loginPassword" required/>
              </div>
              <div class="form-group">
                  <input type="checkbox" id="showHide"/>
                  <label class="show-password" for="showHide"><span class="checkbox"><i class="fa fa-check"></i></span> <span>Show password</span></label>
              </div>
              <button type="submit" class="btn btn-grey login-submit">Log In</button>
          </form>
      </div>
      <div class="modal-footer">
          <div>I can't remember my
              <a href="#" class="forgot-password" data-target="#modal-forgot-password" data-toggle="modal">Password</a>.</div>
      </div>
    </div>
  </div>
